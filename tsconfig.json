{
    "compilerOptions": {
        "target": "es2016",
        "esModuleInterop": true,
        "strict": true,
        "skipLibCheck": true,
        "jsx": "react",
        "module": "esNext",
        "declaration": true,
        "declarationDir": "types",
        "sourceMap": false,
        "outDir": "dist",
        "moduleResolution": "node",
        "emitDeclarationOnly": true,
        "allowSyntheticDefaultImports": true,
        "forceConsistentCasingInFileNames": true,
        "rootDir": "src"
    },
    "exclude": [
        "dist",
        "node_modules",
        "src/**/*.test.tsx",
        "src/**/*.stories.tsx"
    ]
}
